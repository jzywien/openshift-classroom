{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker": "Information"
    },
    "NLog": {
      "IncludeScopes": true
    }
  },
  "ConnectionStrings": {
    "ClassroomContext": ""
  },
  "NLog": {
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "targets": {
      "console": {
        "type": "Console",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "level",
              "layout": "${level:upperCase=true}"
            },
            {
              "name": "date",
              "layout": "${date:universalTime=true:format=HH:mm:ss}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "correlation_id",
              "layout": "${aspnet-request:header=correlationId}"
            },
            {
              "name": "url",
              "layout": "${aspnet-request:servervariable=URL}"
            },
            {
              "name": "message",
              "layout": "${message}"
            },
            {
              "name": "exception",
              "layout": "${onexception:${exception:format=toString}}"
            }
          ]
        }
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console"
      },
      {
        "logger": "Microsoft.AspNetCore.Mvc.Infrastructure.ControllerActionInvoker",
        "minLevel": "Info",
        "writeTo": "console"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      }
    ]
  }
}
